{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": ["object", "array"],
    "items": { "type": "object", "$ref": "#/definitions/entity" },
    "$ref": "#/definitions/entity",
    "definitions": {
        "entity": {
            "properties": {
                "block": { "type": "string" },
                "elem": { "type": "string" },
                "mod": { "type": "string" },
                "val": { "type": "string" },
                "tech": { "type": "string" },
                "include": { "enum": [false] },
                "mustDeps": {
                    "type": ["string", "object", "array"],
                    "items": { "type": ["string", "object"], "$ref": "#/definitions/dependency" },
                    "$ref": "#/definitions/dependency"
                },
                "shouldDeps": {
                    "type": ["string", "object", "array"],
                    "items": { "type": ["string", "object"], "$ref": "#/definitions/dependency" },
                    "$ref": "#/definitions/dependency"
                },
                "noDeps": {
                    "type": ["string", "object", "array"],
                    "items": { "type": ["string", "object"], "$ref": "#/definitions/dependency" },
                    "$ref": "#/definitions/dependency"
                }
            },
            "additionalProperties": false
        },
        "dependency": {
            "properties": {
                "tech": { "type": "string" },
                "block": { "type": "string" },
                "elem": {
                    "type": ["string", "array"],
                    "items": { "type": "string" }
                },
                "elems": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/element" }
                },
                "mods": { "$ref": "#/definitions/modifiers" }
            },
            "additionalProperties": false
        },
        "modifiers": {
            "type": "object",
            "patternProperties": {
              "^[^\\s]+$": {
                  "type": [ "string", "boolean", "array" ],
                  "items": { "type": "string" }
              }
            },
            "additionalProperties": false
        },
        "element": {
            "type": ["string", "object"],
            "properties": {
              "elem": { "type": "string" },
              "mods": { "$ref": "#/definitions/modifiers" }
            },
            "required": ["elem"],
            "additionalProperties": false
        }
    }
}
