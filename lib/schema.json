{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": ["object", "array"],
    "items": { "$ref": "#/definitions/entity" },
    "extend": { "$ref": "#/definitions/entity" },
    "definitions": {
        "entity": {
            "type": "object",
            "properties": {
                "block": { "type": "string" },
                "elem": { "type": "string" },
                "mod": { "type": "string" },
                "val": { "type": "string" },
                "tech": { "type": "string" },
                "mustDeps": { "$ref": "#/definitions/deps" },
                "shouldDeps": { "$ref": "#/definitions/deps" },
                "noDeps": { "$ref": "#/definitions/deps" }
            },
            "additionalProperties": false
        },
        "deps": {
            "type": ["object", "array"],
            "items": { "$ref": "#/definitions/dependency" },
            "extend": { "$ref": "#/definitions/dependency" }
        },
        "dependency": {
            "type": "object",
            "properties": {
                "tech": { "type": "string" },
                "block": { "type": "string" },
                "elem": { "type": "string" },
                "elems": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/element" }
                },
                "mods": { "$ref": "#/definitions/modifiers" }
            },
            "additionalProperties": false
        },
        "modifiers": {
            "type": "object",
            "patternProperties": {
              "^[^\\s]+$": { "type": [ "string", "boolean" ] }
            },
            "additionalProperties": false
        },
        "element": {
            "type": ["string", "object"],
            "properties": {
              "elem": { "type": "string" },
              "mods": { "$ref": "#/definitions/modifiers" }
            }
        }
    }
}
